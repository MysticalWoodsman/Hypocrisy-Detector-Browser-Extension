{
  "manifest_version": 2,
  "name": "Hypocrisy Analyzer",
  "version": "1.0",
  "description": "Analyze text for hypocrisy using OpenAI API.",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    "background.js",
    "icon.png"
  ]
}

